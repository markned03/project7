<div class="hero-unit">

<h1>Kategorie</h1>

<%= link_to("Dodaj nową kategorię", {:action => 'nowa'}, :class => 'btn btn-mini btn-primary') %>

<p style="text-align: right;"> Ilość kategorii: <%= @kategorie.size %> </p>

<table class="table table-striped">
	<tr class="info">
		<th>pozycja</th>
		<th>nazwa kategorii</th>
		<th>widoczna</th>
		<th>strony</th>
		<th>akcja</th>	
	</tr>
<% @kategorie.each do |kat|%>
	<tr>
		<td><%= kat.pozycja %></td>
		<td><%= kat.nazwa %></td>
		<td class="center"><%= status_widoku(kat.widoczna) %></td>
		<td class="center"><%= kat.stronas.size %></td>
		<td class="action">
			<%= link_to("Pokaż", {:action => 'pokaz', :id => kat.id}, :class => 'btn btn-xs btn-default') %>
			<%= link_to("Edycja", {:action => 'edycja', :id => kat.id}, :class => 'btn btn-xs btn-primary') %>
			<%= link_to("Usuń", {:action => 'usun', :id => kat.id}, :class => 'btn btn-xs btn-danger') %>
		</td>	
	</tr>
	<% end %>
</table>
</div>
